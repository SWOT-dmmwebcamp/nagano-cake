<div class="container-md">

    <h4>商品一覧</h4>

    <div class="text-right">
      <%= button_to "新規登録", new_admin_item_path, method: :get, class:"btn btn-light rounded-circle p-2" %>
    </div>

  <div class="row justify-content-center">
    <table class='table table-hover table-inverse'>

      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <% @items.each do |item| %>
      <tbody>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item) do %>
              <%= item.item_name %>
            <% end %>
          </td>
          <td><%= item.price %></td>
          <td><%#= item.janre_id %></td>
          <td><%= item.sales_status %></td>
        </tr>
      </tbody>

      <% end %>
  </div>
</div>