<div class="container-md">
  <div class="row mx-auto mt-4">
    <h4 >商品詳細</h4>


      <div class="col">
        <span>
          <%= image_tag @item.image, size: "200x200" %>
        </span>
      </div>
      <table class="table-item">
        <tr>
          <th>商品名</th>
          <td><%= @item.item_name %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre_id %></td>
        </tr>
        <tr>
          <th>税込価格<br>(税抜価格)</th>
          <td><%= @item.add_tax_price.to_s(:dalmited) %>(<%= @item.price %>)円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td><%= @item.sales_status %></td>
        </tr>
        <tr>
          <th><%= link_to '編集する', edit_admin_item_path %></th>
        </tr>
　　　</table>


      </div>
  </div>
</div>