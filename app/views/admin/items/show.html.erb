<div class="container">
  <h4>商品詳細</h4>
  <div class="row">

      <div class="col">
        <span>
          <%= image_tag @item.image, size: "200x200" %>
        </span>
      </div>
      <div class="col">
        <div class="detail">
          <span>商品名</span>
          <%= @item.item_name %>
        </div>
        <div class="detail">
          <span>ジャンル</span>
          <%= @item.genre_id %>
        </div>
        <div class="detail">
          <span>税込価格<br>(税抜価格)</span>
          <%= @item.add_tax_price.to_s(:dalmited) %>(<%= @item.price %>)円
        </div>
        <div class="detail">
          <span>販売ステータス</span>
          <%= @item.sales_status %>
        </div>
        <div class="detail">
          <%= link_to '編集する', edit_admin_item_path %>
        </div>
      </div>

  </div>
</div>