<div class="container-md">
  <h4 class="bg-light w-25 text-center my-3">商品詳細</h4>
  <div class="row justify-content-center">
    <div class="col-md-3">
      <%= image_tag @item.image, size: "200x200" %>
    </div>
    <div class="col-md-5">
      <table class="table-item m-3">
        <tr>
          <th>商品名</th>
          <td><%= @item.item_name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.caption %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>税込価格<br>(税抜価格)</th>
          <td><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
            <% if @item.sales_status == true %>
              <td class="text-success">販売中</td>
            <% else %>
              <td class="text-muted">販売停止中</td>
            <% end %>
        </tr>
　　　</table>
　　　<%= link_to '編集する', edit_admin_item_path, class:"btn btn-success m-3" %>
　　</div>
  </div>
</div>