<div class="container">
  <h4 class="bg-light text-center m-3", style="width:15%">商品新規登録</h4>
  <div class="row justify-content-center">
    <%= form_with model: @item, url:admin_items_path do |f| %>
      <div class="form-group">
        <%= f.label :商品画像 %>
        <%= f.file_field :image, accept: "image/*" %>
      </div>
      <div class="form-group">
        <%= f.label :商品名   %>
        <%= f.text_field :item_name, placeholder: "商品名" %>
      </div>
      <div class="form-group">
        <%= f.label :商品説明 %>
        <%= f.text_field :caption, placeholder: "ここに説明文を記述します", size: 50 %>
      </div>
      <div class="form-group">
        <%= f.label :ジャンル %>
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), { include_blank: "選択してください"} %>
      </div>
      <div class="form-group">
        <%= f.label :税抜価格 %>
        <%= f.text_field :price, placeholder: "1000" %>円
      </div>

      <div class="form-group">
        <%= f.label :販売ステータス %>
        <%= form_with model: @item, url:admin_items_path do |form| %>
          <%= form.radio_button :sales_status, :true, checked: true %>
          <%= f.label :sales_status, '販売中' %>
          <%= form.radio_button :sales_status, :false %>
          <%= f.label :sales_status, '販売停止中' %>
      </div>
      <div class="row justify-content-center mb-3">
        <%= f.submit '新規登録', class:"btn btn-success" %>
      </div>
        <% end %>
      <% end %>
  </div>
</div>