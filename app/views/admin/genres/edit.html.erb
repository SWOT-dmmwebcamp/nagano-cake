<div class="container mt-5">
  <div class="row">
    <div class="mx-auto col-6"> <strong><p class="fs-3 text-center">ジャンル編集</p></strong>
      <%= form_with model: @genre, url: admin_genre_path ,method: :patch do |f| %>
        <div class="field row  mb-3">
          <%= f.label :ジャンル名,class: "col-4" %>
            <%= f.text_field :name ,class: "col-5 form-control"%>
              <%= f.submit "変更を保存" ,class:"btn btn-sm btn-primary ml-3" %>
        </div>
        <% end %>
    </div>
  </div>
</div>