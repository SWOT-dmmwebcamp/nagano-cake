<div class="container mt-3 mb-3" >
  <div class="row">
    <div class="mx-auto col-10 col-sm-9 col-lg-7 col-xl-5"> <strong><p class="fs-3 text-center">ジャンル一覧・追加</p></strong>
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <div class="field row  mb-3">
          <%= f.label :ジャンル名,class: "col-4" %>
            <%= f.text_field :name %>
              <%= f.submit "新規登録" ,class:"btn btn-sm btn-primary ml-3" %>
        </div>
        <% end %>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>ジャンル</th>
              </tr>
            </thead>
            
            <tbody>
              <% @genres.each do |genre| %>
                <tr>
                  
                  <td>
                    <%= genre.name %>
                  
                  
                    <%= link_to '編集する',new_admin_session_path, class: "btn btn-sm btn-success" %>
                  </td>
                </tr>
                <% end %>
            </tbody>
          </table>
    </div>
  </div>
</div>