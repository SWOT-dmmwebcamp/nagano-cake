<div class="container mt-3 mb-3">
  <div class="row">
    <div class="mx-auto col-5"> <strong><p class="fs-3 text-center">ジャンル一覧・追加</p></strong>
      <%= form_with model: @genre, url: admin_genres_path ,method: :post do |f| %>
      <%= render 'layouts/errors', obj: @genre %>
      <div class="field row  mb-3">
          <%= f.label :ジャンル名,class: "col-4" %>
            <%= f.text_field :name ,class: "col-5 form-control"%>
              <%= f.submit "新規登録" ,class:"btn btn-sm btn-primary ml-3" %>
        </div>
        <% end %>
          <table class="table table-bordered  mt-3">
            <thead style="background-color:#dcc8dc;">
              <tr>
                <th>ジャンル</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @genres.each do |genre| %>
                <tr style="background-color:#ffffff;">
                  <td class="text-center">
                    <%= genre.name %>
                  </td>
                  <td class="text-center">
                    <%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-sm btn-success" %>
                  </td>
                </tr>
                <% end %>
            </tbody>
          </table>
    </div>
  </div>
</div>