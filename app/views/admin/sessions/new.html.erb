
<div class="container mt-5">
  <div class="row">
    <div class="mx-auto col-10 col-sm-9 col-lg-7 col-xl-5"> <strong><p class="fs-3">管理者ログイン</p></strong>
      <%= form_with model: @admin,url: admin_session_path do |f| %>
        <div class="field row mb-1">
          <%= f.label :メールアドレス,class: "col-6" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field row mb-3">
          <%= f.label :パスワード ,class: "col-6"%>
            <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
        <div class="btn-wrapper mx-auto col-4">
          <%= f.submit "ログイン" ,class:"btn btn-sm btn-primary" %>
        </div>
    </div>
    <% end %>
  </div>
</div>
</div>