<div class="container">
<div class="col-sm-12 col-md-8 col-lg-8 px-5 px-sm-0 mx-auto">
<h2><%= @customer.last_name%><%= @customer.first_name%>さんの会員情報編集</h2>

<%= form_with model: @customer,url: admin_customer_path(@customer) do |f| %>
  <div class="row">
    <p class="col">会員ID</p>
    <div class"col "><%= @customer.id%></div>
  </div>
    <div class="form-group">

    <div class="row mb-3">
    <p class="col-form-label col-sm-2">氏名</p>
    <div class="col-sm-5">
    <%= f.text_field :last_name, class: 'form-control' %>
    <%= f.text_field :first_name, class: 'form-control' %>
    </div>
    </div>
  </div>
    <div class="form-group">
    <p>フリガナ</p>
    <div class="col-sm-8">
    <%= f.text_field :kana_last_name, class: 'form-control book_title' %>
    <%= f.text_field :kana_first_name, class: 'form-control book_title' %>
  </div>
    <div class="row mb-3">
    <label for="inputEmail3" class="col-sm-3 col-form-label">郵便番号</label>
    <div class="col-sm-9">
       <%= f.text_field :zipcode, class: 'form-control book_title' %>
    </div>
    </div>
        <div class="row mb-3">
    <label for="inputEmail3" class="col-sm-3 col-form-label">住所</label>
    <div class="col-sm-9">
       <%= f.text_field :address, class: 'form-control book_body' %>
    </div>
    </div>
         <div class="row mb-3">
    <label for="inputEmail3" class="col-sm-3 col-form-label">電話番号</label>
    <div class="col-sm-9">
       <%= f.text_field :phone_number, class: 'form-control book_body' %>
    </div>
    </div>
    <div class="row mb-3">
    <label for="inputEmail3" class="col-sm-3 col-form-label">メールアドレス</label>
    <div class="col-sm-9">
       <%= f.text_field :email, class: 'form-control book_body' %>
    </div>
    </div>
    <div class="row mb-3">
     <label for="inputEmail3" class="col-sm-3 col-form-label">会員ステータス</label>
     <div class="col-sm-9">
    <%= f.radio_button :delete_flag, "false" %>有効 <%= f.radio_button :delete_flag, "true" %>退会
  </div>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
  <% end %>
</div>
</div>
