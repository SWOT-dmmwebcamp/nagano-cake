<div class="container" style="margin-top: 2rem;">
<div class="col-sm-12 col-md-8 col-lg-8 px-5 px-sm-0 mx-auto">
<h2 style="margin-bottom: 2rem;"><%= @customer.last_name%><%= @customer.first_name%>さんの会員情報編集</h2>

<%= form_with model: @customer,url: admin_customer_path(@customer) do |f| %>
<%= render 'layouts/errors', obj: @customer %>
  <div class="row mb-3">
    <p class="col-3" style="margin-right: 1rem;">会員ID</p>
    <div class"col-1"><%= @customer.id%></div>
  </div>

    <div class="row mb-3">
    <p class="col-3">氏名</p>
    <div class="col-4">
    <%= f.text_field :last_name, class: 'form-control' %></div>
    <div class="col-4"><%= f.text_field :first_name, class: 'form-control' %></div>
    </div>

    <div class="row mb-3">
    <p  class="col-3">フリガナ</p>
    <div class="col-4">
    <%= f.text_field :kana_last_name, class: 'form-control' %></div>
    <div class="col-4">
    <%= f.text_field :kana_first_name, class: 'form-control' %></div>
  </div>
    <div class="row mb-3">
    <p  class="col-3">郵便番号</p>
    <div class="col-4">
       <%= f.text_field :zipcode, class: 'form-control ' %>
    </div>
    </div>
        <div class="row mb-3">
    <p  class="col-3">住所</p>
    <div class="col-9">
       <%= f.text_field :address, class: 'form-control ' %>
    </div>
    </div>
         <div class="row mb-3">
    <p  class="col-3">電話番号</p>
    <div class="col-4">
       <%= f.text_field :phone_number, class: 'form-control ' %>
    </div>
    </div>
    <div class="row mb-3">
    <p  class="col-3">メールアドレス</p>
    <div class="col-4">
       <%= f.text_field :email, class: 'form-control ' %>
    </div>
    </div>
    <div class="row mb-3">
     <p  class="col-3">会員ステータス</p>
     <div class="col-6">
    <%= f.radio_button :delete_flag, "false" %>有効 <%= f.radio_button :delete_flag, "true" %>退会
  </div>
  </div>
  <div class="form-group mb-5">
    <%= f.submit class: 'btn btn-success' %>
  </div>
  <% end %>
</div>
</div>
