<div class="container public-cart-index">
  <div class="row my-2">
    <div class="w-75 mx-auto">
      <div class="d-flex justify-content-between align-items-center">
        <h4 class="bg-light text-center my-3 px-4">ショッピングカート</h4>
        <%= link_to "カートを空にする", "#", class: "btn btn-danger btn-sm h-50" %>
      </div>
      <table class="table item-table table-bordered w-100 mx-auto align-middle">
        <tr class="bg-light">
          <th class="table-item">商品名</th>
          <th class="table-item" style="width: 15%">単価(税込)</th>
          <th class="table-item" style="width: 20%">数量</th>
          <th class="table-item" style="width: 15%">小計</th>
          <th class="table-item" style="width: 15%"></th>
        </tr>
        <% 2.times do %> <!-- @order_details.each do |order_detail| -->
          <tr>
            <td class="table-item">チョコバナナミルフィーユ</td>
            <td class="table-item">1,100</td>
            <td class="table-btn" align="center">
              <%= form_with model: @cart_items do |f| %>
                <%= f.select :piece, @cnt, {}, {class: "btn btn-outline-secondary btn-sm"} %>
                <%= f.submit '変更', class: "btn btn-success btn-sm" %>
              <% end %>
            </td>
            <td class="table-item">1,000</td>
            <td align="center">
              <%= link_to "削除する", "#", class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </table>
      <div class="w-100 mt-4" align="right">
        <div class="d-flex justify-content-between align-items-center">
          <div class="d-flex justify-content-center w-25">
            <%= link_to "買い物を続ける", "#", class: "btn btn-primary btn-sm h-50" %>
          </div>
          <table class="table sum-table table-bordered w-25">
            <th class="table-item bg-light">合計金額</th>
            <td class="table-item">1,100</td>
          </table>
        </div>
      </div>
      <div class="w-100" align="center">
        <div class="d-flex justify-content-center mt-5">
          <%= link_to "情報入力に進む", "#", class: "btn btn-success btn px-4" %>
        </div>
      </div>
    </div>
  </div>
</div>