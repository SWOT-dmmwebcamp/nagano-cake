<div class="container mt-4 mb-5">
  <div class="row">
    <div class=" mx-auto col-10"> <strong><p class="fs-1 ">配送先登録/一覧</p></strong>
      <%= form_with model: @destination, url: deliverys_path, method: :post do |f| %>
        <div class="field row mb-2">
          <%= f.label :郵便番号（ハイフンなし）,class: "col-3" %>
            <%= f.text_field :zipcode ,class: "col-3 form-control",placeholder: "0000000" %>
        </div>
        <div class="field row mb-2">
          <%= f.label :住所,class: "col-3" %>
            <%= f.text_field :address ,class: "col-7 form-control",placeholder: "東京都○○区"%>
        </div>
        <div class="field row">
          <%= f.label :宛名,class: "col-3" %>
            <%= f.text_field :delivery_name,class: "col-3 form-control",placeholder: "ミカサ" %>
              
              <div class="form-groupe ml-auto">
                <%= f.submit "新規登録" ,class: "btn btn-sm btn-primary" %>
              </div>
        </div>
        <% end %>
          <table class="table table-striped table-borderd mt-3">
            <tr>
              <th class="col-2">郵便番号</th>
              <th class="col-4">住所</th>
              <th class="col-2">宛名</th>
              <th colspan="4"></th>
            </tr>
            <tbody>
              <% @destinations.each do |destination| %>
                <tr>
                  <td>
                    <%= destination.zipcode %>
                  </td>
                  <td>
                    <%= destination.address %>
                  </td>
                  <td>
                    <%= destination.delivery_name %>
                  </td>
                  <td>
                    <%= link_to '編集する', edit_delivery_path(destination), class: "btn btn-sm btn-success" %>
                  </td>
                  <td>
                    <%= link_to '削除する', delivery_path(destination), class: "btn btn-sm btn-dander" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
    </div>
  </div>
</div>
