<div class="container mt-4 mb-5">
  <div class="row">
    <div class=" mx-auto col-8"> <strong><p class="fs-1 ">配送先登録/一覧</p></strong>
      <%= form_with model: @destination, url: deliverys_path, method: :post do |f| %>
        <div class="field row mb-2">
          <%= f.label :郵便番号（ハイフンなし）,class: "col-4" %>
            <%= f.text_field :zipcode ,class: "col-3 form-control",placeholder: "0000000" %>
        </div>
        <div class="field row mb-2">
          <%= f.label :住所,class: "col-4" %>
            <%= f.text_field :address ,class: "col-7 form-control",placeholder: "東京都○○区"%>
        </div>
        <div class="field row">
          <%= f.label :宛名,class: "col-4" %>
            <%= f.text_field :delivery_name,class: "col-3 form-control",placeholder: "ミカサ" %>
              <div class="form-groupe ml-auto">
                <%= f.submit "新規登録" ,class: "btn btn-sm btn-primary" %>
              </div>
        </div>
        <% end %>
          <table class="table table-bordered  mt-3">
            <thead style="background-color:#dcc8dc;">
              <tr>
                <th class="col-2 text-center">郵便番号</th>
                <th class="col-4 text-center">住所</th>
                <th class="col-2 text-center">宛名</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @destinations.each do |destination| %>
                <tr style="background-color:#ffffff;">
                  <td class="text-center">
                    <%= destination.zipcode %>
                  </td>
                  <td class="text-center">
                    <%= destination.address %>
                  </td>
                  <td class="text-center">
                    <%= destination.delivery_name %>
                  </td>
                  <td class="text-center">
                    <%= link_to '編集する', edit_delivery_path(destination), class: " mr-2 btn btn-sm btn-success" %>
                      <%= link_to '削除する', delivery_path(destination), class: "btn btn-sm btn-danger" ,method: :delete, data: {confirm:  "本当に削除しますか"} %>
                  </td>
                </tr>
                <% end %>
            </tbody>
          </table>
    </div>
  </div>
</div>