<div class="container mt-5 mb-3">
  <div class="row">
    <div class=" mx-auto col-8"> <strong><p class="fs-2 ">配送先編集</p></strong>
      <%= form_with model: @destination, url: delivery_path, method: :patch do |f| %>
      <%= render 'layouts/errors', obj: @destination %>
        <div class="field row mb-2">
          <%= f.label :郵便番号（ハイフンなし）,class: "col-4" %>
            <%= f.text_field :zipcode ,class: "col-4 form-control"%>
        </div>
        <div class="field row mb-2">
          <%= f.label :住所,class: "col-4" %>
            <%= f.text_field :address ,class: "col-7 form-control"%>
        </div>
        <div class="field row">
          <%= f.label :宛名,class: "col-4" %>
            <%= f.text_field :delivery_name,class: "col-4 form-control" %>
              
              <div class="form-groupe ml-auto">
                <%= f.submit "変更を保存" ,class: "btn btn-sm btn-primary" %>
              </div>
        </div>
        <% end %>
</div>