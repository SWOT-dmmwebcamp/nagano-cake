<div class="container" style="margin-top: 2rem; margin-left: 3rem; font-size:15px padding-left:0px;">
  <div class="d-inline-block text-left">
<h4 class="mb-5">新規会員登録</h4>
<div style="width:1000px">
<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
<div class="">
  <div class="field row ">
    <div class="col-4">
    <%= f.label :名前, class:""%></div>
    <div class="col-4 pl-0">
      (姓)<%= f.text_field :last_name, autofocus: true, autocomplete: "name", class:"form-control" %></div>
    <div class="col-4 pl-0">
      (名)
    <%= f.text_field :first_name, class:"form-control" %></div>

  </div>

   <div class="field row mb-3">
    <%= f.label :フリガナ, class:"col-4"%>
    <div class="col-4 pl-0">
      (セイ)
    <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "name", class:"form-control" %></div>
    <div class="col-4 pl-0">
      (メイ)
    <%= f.text_field :kana_first_name, class:"form-control" %></div>

  </div>

  <div class="field row mb-3 ">
    <%= f.label :メールアドレス, class:"col-4"%><br />
    <%= f.email_field :email, class:"col-4 form-control" %>
  </div>

  <div class="field row mb-3">
    <%= f.label :郵便番号（ハイフンなし）, class:"col-4"%><br />
    <%= f.text_field :zipcode, class:"col-4 form-control" %>
  </div>

   <div class="field row mb-3">
    <%= f.label :住所, class:"col-4"%><br />
    <%= f.text_field :address, class:"col-8 form-control" %>
  </div>

  <div class="field row mb-3">
    <%= f.label :電話番号（ハイフンなし）, class:"col-4"%><br />
    <%= f.text_field :phone_number, class:"col-4 form-control" %>
  </div>


  <div class="field row mb-3">
    <%= f.label :パスワード（6文字以上）, class:"col-4"%>
    <% if @minimum_password_length %>
 <!--   <em>(<%#= @minimum_password_length %> 文字以上)</em> -->
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control col-4" %>
  </div>

  <div class="field row mb-3">
    <%= f.label :パスワード（確認用）, class:"col-4"%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control col-4" %>
  </div>

  <div class="actions text-center mt-5 mb-5">
    <%= f.submit "新規登録", class:"btn btn-sm btn-success btn-lg" %>
  </div>
<% end %>

<h5><%= render "public/shared/links" %> からログインしてください</h5>
</div>
</div>
</div></div>